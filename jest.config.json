{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coveragePathIgnorePatterns": [
    "src/config",
    "tests/helpers",
    "test/stubs",
    ".module.ts",
    "base.repository.ts",
    "index.ts"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node"
}
